<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <stroke android:width="1dp" android:color="#57719D" />

            <gradient android:angle="270" android:centerColor="#7394BD" android:endColor="#57719D" android:startColor="#93A7C5" />

            <corners android:radius="7dip" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <stroke android:width="1dp" android:color="#57719D" />

            <gradient android:angle="270" android:centerColor="#7394BD" android:endColor="#57719D" android:startColor="#93A7C5" />

            <corners android:radius="7dip" />
        </shape></item>
    <item><shape>
            <stroke android:width="1dp" android:color="#57719D" />

            <gradient android:angle="270" android:centerColor="#EDF1F5" android:endColor="#EDF1F5" android:startColor="#F8F8FA" />

            <corners android:radius="7dip" />
        </shape></item>

</selector>